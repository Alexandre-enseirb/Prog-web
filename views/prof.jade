      style.
        #container_post{
        background:#FFA500;
        color:#0C3BFF;
        padding:25px;
        margin:100px auto 0px;
        width:100%;
        text-align:center;
        font-family:"Arial";
        box-shadow:10px 10px 15px  black  ;
        }
        #container_response{
        background:#00FFFF;
        color:#990099;
        padding:25px;
        margin:100px auto 0px;
        width:100%;
        text-align:center;
        font-family:"Arial";
        box-shadow:10px 10px 15px  black  ;
        }
        picture{
            width:150px;
            height:150px;
            position: absolute;
            top:25px;
            right:150px;
            background:#A9ABFB;
            background-image:url(images/logo.png);
        }
        hr{width:100%;
        border:#0C3BFF 1px  solid  ;
